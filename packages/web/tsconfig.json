{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@app/types": ["../types/src/index.ts"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "../types" }
  ]
}