#!/bin/bash
# Pre-commit hook to enforce emoji ban

echo "Running pre-commit checks..."

# Check for emojis
echo "Checking for emoji violations..."
npm run ci:no-emoji

if [ $? -ne 0 ]; then
  echo "❌ Pre-commit failed: Emoji violations found"
  echo "Remove all emojis from source code and try again"
  exit 1
fi

echo "✅ Pre-commit checks passed"
exit 0